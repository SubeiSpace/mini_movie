/* miniprogram/pages/file-details/film-details.wxss */
.film-details-wrapper {
  margin-top: 70rpx;
  margin-bottom: 0rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: white;
  height: 960rpx;
}
.details-info-wrapper {
  height: 880rpx;
}

.review-btn-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-around

}
.details-image {
  height: 330rpx;
  width: 230rpx;
}
.details-image-view {
  margin-top: -60rpx;
  display:flex;
  justify-content: center;
}
.details-name {
  display:flex;
  justify-content:center;
  font-weight:600;
  margin-top: 15rpx;
  letter-spacing:8rpx;
  font-size: 38rpx;
  line-height: 53.2rpx;
}
.details-description {
  margin:20rpx 50rpx 20rpx 50rpx;
  font-family: "Times New Roman";
  color: grey;
  font-size: 28rpx;
  font-weight: 100;
}

.check-review {
  width: 50%;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.add-review {
  width: 50%;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.output-audio{ 
  width: 360rpx; 
  margin: 30rpx; 
  margin-left: 0rpx;
  background-color:#f5f5f5;
}
.output-audio .audio{  
  padding: 20rpx; 
  border-radius: 10rpx;
  overflow: hidden; 
}
.output-audio .audio .ico{ 
  width: 26rpx; 
  height: 30rpx; 
  float: left;
}
.output-audio .audio .time{ 
  float: right; 
  font-size: 24rpx;
}
.review-list-wrapper {
  background-color: white;
  margin-top: 30rpx;
}

.user-head-image {
  flex-shrink: 0;
  height: 100rpx;
  width: 100rpx;
  background: #F5E069;
  border-radius: 50%;
}
.user-info {
  display: flex;
  align-items:center;
  margin-top: 30rpx;
  margin-left: 60rpx;
}
.user-name {
  margin-left: 30rpx;
  color: #3a3535;
}
.review-info {
  margin-left:80rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  font-size: 24rpx;
}
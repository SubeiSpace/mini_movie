page{
  width: 100%;
  height:100%;
}
.review-list-wrapper {
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  flex: 1;
  position: relative;
  flex-wrap: wrap;
  justify-content: space-between;


}
.film-image {
  width: 207rpx;
  height: 306rpx;

}
.image-wrapper {
  width: 30%;


}
.film-info-wrapper {
  width: 70%;
  background-color: white;
  text-align: left;
  height: 306rpx;
  
}

.film-name-view {
  margin-top: 20rpx;
  margin-left: 35rpx;
  font-weight:600;
  line-height: 58.8rpx;
}
.film-review-view {
  margin-top: 20rpx;
  margin-left: 35rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  height: 120rpx;
}

.user-head-image {
  flex-shrink: 0;
  height: 60rpx;
  width: 60rpx;
  background: #F5E069;
  border-radius: 50%;
}
.user-info-view {
  display: flex;
  margin-left: 35rpx;
  margin-top: 10rpx;
}
.user-name {
  margin-left: 20rpx;
}
.back-btn-view {
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 10rpx;
}
.back-button {
  color: grey;
  width: 450rpx;
}
.my-review-list-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}

.play-wrapper {
  display: flex;
  width: 360rpx; 
  margin: 30rpx; 
  margin-left: 36rpx;
  background-color:#f5f5f5;
  height: 60rpx;
}
.ico{ 
  width: 26rpx; 
  height: 30rpx; 
  float: left;
  margin-top: 15rpx;
  margin-left: 27rpx;
}
.time {
  padding: 10rpx;
}